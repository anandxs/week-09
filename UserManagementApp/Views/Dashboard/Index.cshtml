@model IEnumerable<DetailsUser>

@{
	ViewData["Title"] = "Index";
}

<h1>User List</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Create New User</a>
	<a asp-action="Search" class="btn btn-info">Search with email</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				First Name
			</th>
			<th>
				Last Name
			</th>
			<th>
				Email
			</th>
			<th>
				Role
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>
					@user.Id
				</td>
				<td>
					@user.FirstName
				</td>
				<td>
					@user.LastName
				</td>
				<td>
					@user.Email
				</td>
				<td>
					@user.Role
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
					<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
					<a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
